package thanhMenu;
import java.awt.Color;
import javax.swing.JButton;
import javax.swing.JCheckBox;
import javax.swing.JFrame;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;
import javax.swing.JPanel;
import java.awt.GridLayout;
import java.awt.BorderLayout;
import java.awt.event.ActionListener;
public class view extends JFrame{
	JPanel jp;
	public view() {
		this.setSize(700, 500);
		this.setVisible(true);
		this.setLocationRelativeTo(null);
		ActionListener ac=new controller(this);
		JMenuBar jm=new JMenuBar();
		JMenu jmn=new JMenu("add");
		JCheckBox jc=new JCheckBox("show");
		jc.addActionListener(ac);
		jmn.add(jc);
		jm.add(jmn);
		
		
		this.setJMenuBar(jm);
		
		jp=new JPanel();
		jp.setLayout(new GridLayout(6,1, 20, 20));
		
		JButton j1=new JButton("Trang chủ");
		j1.setBackground(Color.WHITE);
		JButton j2=new JButton("Tài khoản");
		j2.setBackground(Color.WHITE);
		JButton j3=new JButton("Thống kê");
		j3.setBackground(Color.WHITE);
		JButton j4=new JButton("Trợ giúp");
		j4.setBackground(Color.WHITE);
		JButton j5=new JButton("Giới thiệu");
		j5.setBackground(Color.WHITE);
		JButton j6=new JButton("Đăng xuất");
		j6.setBackground(Color.WHITE);
		
		jp.add(j1);
		jp.add(j2);
		jp.add(j3);
		jp.add(j4);
		jp.add(j5);
		jp.add(j6);
		
		this.setLayout(new BorderLayout());
		//this.add(jp, BorderLayout.WEST);
		
		
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	}
	public void hien() {
		this.add(jp, BorderLayout.WEST);
		this.refresh();
	}
	public void an() {
		this.remove(jp);
		this.refresh();
	}
	public void refresh() {
		this.pack();
		this.setSize(700, 500);
	}
}
